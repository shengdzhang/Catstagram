<section class="module content">
  <div class="container">
    <h2 class="row col-xs-12 text-center">Welcome to Catstagram!</h2>
    <p class="text-center">This is a project inspired by Instagram. </p>
  </div>
</section>

<section class="module parallax parallax-1">
  <div class="container">
    <h2>Created using Ruby on Rails and jReact.</h2>
  </div>
</section>

<div class="auth-wrap sign-in displayed">
  <div class="container">
    <div class="auth-form col-xs-8 col-xs-offset-2">
      <% if flash['errors'] %>
        <% flash['errors'].each do |error| %>
          <div class="alert alert-warning"><%= error %></div>
        <% end %>
      <% end %>

      <div class="jumbotron sign-head sign-head col-xs-offset-3 col-xs-4">

        <a href= "<%= new_user_url%>" class="modal-close">&times;</a>

        <div class="row">

            <h2 class="text-center">Sign In</h2>

            <form class="form-group" action=<%= session_url %> method='POST'>
              <%= auth_token %>
              <input type="text" name="user[username]" class="form-control" id="username" placeholder="Username">
              <br/>

              <input type="password" name="user[password]" class="form-control" id="password" placeholder="Password">
              <br/>

              <p class="text-center">Or use the guest account.
              <br/>
              <br/>

              <button type="submit" class="btn btn-primary form-control">Sign In</button>

            </form>
            <form action="<%= guest_session_url %>" method="post">
              <%= auth_token %>
              <input class="btn btn-primary form-control" type="submit" value="Guest"/>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
